<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.liamd.giggity_app.VenueUserCreateGigFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Gig Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView11"
            android:textSize="16sp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:ems="10"
            android:id="@+id/gigNameEditText"
            android:maxLength="50"/>

        <TextView
            android:text="Venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView12"
            android:textSize="16sp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:text=""
            android:ems="10"
            android:id="@+id/VenueNameEditText"/>

        <TextView
            android:text="Genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView18"
            android:textSize="16sp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <com.liamd.giggity_app.MultiSelectSpinner
            android:id="@+id/genreSpinner"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="22dp"
            android:paddingLeft="10dp"/>

            <TextView
                android:text="Start Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView13"
                android:textSize="16sp"
                android:textColor="@color/cast_expanded_controller_background_color"/>

            <TextView
                android:text="No date selected!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/StartDateSelectedLabel"/>

            <Button
                android:text="Select a start date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LaunchStartDatePickerButton"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/cardview_light_background"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:text="Finish Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView16"
                android:textSize="16sp"
                android:textColor="@color/cast_expanded_controller_background_color"/>

            <TextView
                android:text="No date selected! (ignore if this is the same as the start date)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/FinishDateSelectedLabel"/>

            <Button
                android:text="Select a finish date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LaunchFinishDatePickerButton"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/cardview_light_background"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:text="Start Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView14"
                android:textSize="16sp"
                android:textColor="@color/cast_expanded_controller_background_color"/>

            <TextView
                android:text="No time selected!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/StartTimeSelectedLabel"/>

            <Button
                android:text="Select a start time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LaunchStartTimePickerButton"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/cardview_light_background"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:text="Finish Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/textView15"
                android:textSize="16sp"
                android:textColor="@color/cast_expanded_controller_background_color"/>

            <TextView
                android:text="No time selected!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:id="@+id/FinishTimeSelectedLabel"/>

            <Button
                android:text="Select a finish time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LaunchFinishTimePickerButton"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/cardview_light_background"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>

        <TextView
            android:text="Ticket Cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView19"
            android:textSize="16sp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <TextView
            android:text="No cost selected!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/TicketCostSelectedTextView"/>

        <NumberPicker
            android:id="@+id/ticketCostNumberPicker"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Ticket Quantity Available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:id="@+id/textView21"
            android:textSize="16sp"
            android:textColor="@color/cast_expanded_controller_background_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ticketQuantityEditText"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="4"/>

            <CheckBox
                android:id="@+id/matchVenueCapacityItemCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="Match Venue Capacity"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Featured Gig"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="16sp"/>

        <CheckBox
            android:id="@+id/featuredItemCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Yes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Entry Age Restriction (Optional)"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/entryAgeEditText"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"/>

            <Button
                android:text="Create Gig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/createGigButton"
                android:background="@color/colorPrimary"
                android:textColor="@color/cardview_light_background"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
