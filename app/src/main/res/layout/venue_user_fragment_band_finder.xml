<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.liamd.giggity_app.MusicianUserBandFinderFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="Distance Range From Your Venue"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/distanceSeekBar"
                    android:layout_marginTop="22dp"
                    android:max="100"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:text="Distance (km):"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/distanceValueTextView"
                    android:layout_weight="1"
                    android:layout_marginTop="22dp"
                    android:paddingLeft="10dp"/>

                <TextView
                    android:text="Band Genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:layout_marginTop="22dp"
                    android:paddingLeft="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>

                <com.liamd.giggity_app.MultiSelectSpinner
                    android:id="@+id/genreSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:layout_marginBottom="32dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="22dp"/>

                <Button
                    android:text="Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchButton"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/cardview_light_background"/>
            </LinearLayout>
        </ScrollView>
</FrameLayout>