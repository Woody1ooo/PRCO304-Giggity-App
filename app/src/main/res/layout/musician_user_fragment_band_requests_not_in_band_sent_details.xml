<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.liamd.giggity_app.MusicianUserBandRequestsNotInBandSentDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bandImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        android:text="Band Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/bandNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        android:text="Band Genres"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/bandGenresTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        android:text="Position Applied For"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/positionAppliedForTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="20dp"
            android:text="Request Status"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/requestStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="20dp"/>

        <Button
            android:id="@+id/cancelRequestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Cancel Request"
            android:layout_marginTop="20dp"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>
    </LinearLayout>
    </ScrollView>

</FrameLayout>
