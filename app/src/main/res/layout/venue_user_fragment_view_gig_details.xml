<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.liamd.giggity_app.VenueUserViewGigDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Gig Name"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/gigNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/artistHeadingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="20dp"
                android:text="Artist Performing"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/artistProfileImageView"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="No Artist Chosen!"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hireActButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Hire"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>

                <Button
                    android:id="@+id/removeActButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Remove"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Genres"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <com.liamd.giggity_app.MultiSelectSpinner
                android:id="@+id/genreSpinner"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="22dp"
                android:layout_weight="0.15"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Start Date"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/StartDateSelectedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="No date selected!"/>

            <Button
                android:id="@+id/UpdateStartDatePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update start date"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Finish Date"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/FinishDateSelectedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="No date selected! (ignore if this is the same as the start date)"/>

            <Button
                android:id="@+id/UpdateFinishDatePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update finish date"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Start Time"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/StartTimeSelectedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="No time selected!"/>

            <Button
                android:id="@+id/UpdateStartTimePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update start time"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="Finish Time"
                android:textColor="@color/cast_expanded_controller_background_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/FinishTimeSelectedLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="No time selected!"/>

            <Button
                android:id="@+id/UpdateFinishTimePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Update finish time"
                android:textColor="@color/cardview_light_background"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/UpdateGigButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Update"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>

                <Button
                    android:id="@+id/DeleteGigButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Delete"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
